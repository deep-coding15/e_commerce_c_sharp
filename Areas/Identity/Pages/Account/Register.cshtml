@page
@model RegisterModel

@{
    ViewData["Title"] = "Inscription";
}

<div class="d-flex align-items-center justify-content-center min-vh-100 bg-light">
    <div class="card shadow-lg border-0" style="max-width: 900px; width: 100%;">
        <div class="row g-0">
            <!-- Colonne gauche : visuel / branding -->
            <div class="col-md-5 d-none d-md-flex bg-success text-white flex-column justify-content-center align-items-center p-4">
                <h2 class="fw-bold mb-3 text-center">Rejoignez notre boutique</h2>
                <p class="text-center mb-4">
                    Créez votre compte pour accéder à vos commandes, 
                    sauvegarder vos préférences et profiter d'offres exclusives.
                </p>
                <i class="bi bi-person-plus-fill" style="font-size: 3rem;"></i>
            </div>

            <!-- Colonne droite : formulaire -->
            <div class="col-md-7 p-4 p-md-5">
                <h3 class="mb-3 text-center">Créer un compte</h3>
                <p class="text-muted text-center mb-4">
                    Remplissez le formulaire pour rejoindre notre communauté.
                </p>

                <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3" role="alert"></div>

                    <div class="row">
                        <div class="col-12">
                            <div class="form-floating mb-3">
                                <input asp-for="Input.Nom"
                                       class="form-control"
                                       autocomplete="given-name"
                                       aria-required="true"
                                       placeholder="Votre nom" />
                                <label asp-for="Input.Nom">Nom complet</label>
                                <span asp-validation-for="Input.Nom" class="text-danger small"></span>
                            </div>
                        </div>
                    </div>

                    <div class="form-floating mb-3">
                        <input asp-for="Input.Email"
                               class="form-control"
                               autocomplete="email"
                               aria-required="true"
                               placeholder="name@example.com" />
                        <label asp-for="Input.Email">Adresse e-mail</label>
                        <span asp-validation-for="Input.Email" class="text-danger small"></span>
                    </div>

                    <div class="form-floating mb-3">
                        <input asp-for="Input.Password"
                               class="form-control"
                               autocomplete="new-password"
                               aria-required="true"
                               placeholder="Mot de passe sécurisé" />
                        <label asp-for="Input.Password">Mot de passe</label>
                        <span asp-validation-for="Input.Password" class="text-danger small"></span>
                    </div>

                    <div class="form-floating mb-3">
                        <input asp-for="Input.ConfirmPassword"
                               class="form-control"
                               autocomplete="new-password"
                               aria-required="true"
                               placeholder="Confirmez le mot de passe" />
                        <label asp-for="Input.ConfirmPassword">Confirmer le mot de passe</label>
                        <span asp-validation-for="Input.ConfirmPassword" class="text-danger small"></span>
                    </div>

                    <div class="form-check mb-3">
                        <input class="form-check-input" type="checkbox" id="terms" required />
                        <label class="form-check-label" for="terms">
                            J'accepte les <a href="#" class="text-decoration-none">conditions d'utilisation</a> 
                            et la <a href="#" class="text-decoration-none">politique de confidentialité</a>
                        </label>
                    </div>

                    <button id="registerSubmit"
                            type="submit"
                            class="btn btn-success w-100 py-2 mb-3">
                        Créer mon compte
                    </button>

                    <div class="text-center mb-3">
                        <span class="text-muted">Vous avez déjà un compte ?</span>
                        <a asp-page="./Login"
                           asp-route-returnUrl="@Model.ReturnUrl"
                           class="ms-1 text-decoration-none fw-semibold">
                            Me connecter
                        </a>
                    </div>

                    @* Authentification externe *@
                    @if ((Model.ExternalLogins?.Count ?? 0) > 0)
                    {
                        <div class="text-center">
                            <span class="text-muted d-block mb-2">ou inscrivez-vous avec</span>
                            @foreach (var provider in Model.ExternalLogins!)
                            {
                                <button type="submit"
                                        class="btn btn-outline-secondary btn-sm mx-1 mb-2"
                                        name="provider"
                                        value="@provider.Name"
                                        title="S'inscrire avec @provider.DisplayName">
                                    <i class="bi bi-" me="@provider.Name.ToLower()"></i> @provider.DisplayName
                                </button>
                            }
                        </div>
                    }
                </form>

                @* Message si aucun provider externe configuré *@
                @if ((Model.ExternalLogins?.Count ?? 0) == 0)
                {
                    <p class="mt-3 small text-muted text-center">
                        Aucun service d'authentification externe n'est configuré pour le moment.
                    </p>
                }
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

