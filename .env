# ===============================
# Application
# ===============================
APP_NAME=Nka’aMarket
APP_DESCRIPTION=Nka’aMarket – La maison culturelle africaine au Maroc
APP_ENV=Development
APP_URL=https://localhost:5001

# ===============================
# Database (SQL Server)
# ===============================
#DB_SERVER=localhost
#DB_NAME=ECommerceDB
#DB_USER=sa
#DB_PASSWORD=StrongPassword@123

# Connection string reconstruite dans Program.cs
#DB_CONNECTION=Server=localhost;Database=ECommerceDB;User Id=sa;Password=StrongPassword@123;TrustServerCertificate=True;

# ===============================
# ASP.NET Identity
# ===============================
IDENTITY_REQUIRE_CONFIRMED_ACCOUNT=false
IDENTITY_PASSWORD_REQUIRED_LENGTH=8
IDENTITY_LOCKOUT_MAX_FAILED_ATTEMPTS=5

# ===============================
# Security
# ===============================
JWT_SECRET=ChangeThisSecretKeyInProduction
CSRF_ENABLED=true

# ===============================
# Serilog
# ===============================
LOG_LEVEL=Information
LOG_FILE_PATH=Logs/log-.txt

# ===============================
# Business Rules
# ===============================
DEFAULT_TVA_RATE=0.20
STOCK_ALERT_THRESHOLD=5

# Les paramètres sensibles sont externalisés afin de 
# sécuriser la configuration et faciliter le déploiement