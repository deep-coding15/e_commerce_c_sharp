@page "{searchString?}"
@model E_commerce_c_charp.Pages_Product.IndexModel

@{
    ViewData["Title"] = "Catalogue Produits";
}

<section class="mb-4">
    <h1 class="fw-bold">
        <i class="bi bi-grid-3x3-gap"></i> Catalogue Produits
    </h1>
</section>

<div class="row">
    <!-- FILTRES -->
    <aside class="col-lg-3 mb-4">
        <div class="card">
            <div class="card-body">
                <h5 class="fw-bold mb-3">
                    <i class="bi bi-funnel"></i> Filtres
                </h5>

                <form method="get" class="d-grid gap-3">
                    <!-- Search by Name -->
                    <div class="mb-4">
                        <label class="form-label fw-bold">
                            <i class="bi bi-search"></i> Rechercher
                        </label>
                        <input type="text" class="form-control" asp-for="SearchString"
                            placeholder="Nom du produit..." />
                    </div>
                    <!-- Category Filter -->
                    <div class="mb-4">
                        <label class="form-label fw-bold">
                            <i class="bi bi-tags"></i> Catégorie
                        </label>
                        <select asp-for="ProductCategory" asp-items="Model.Category" class="form-select">
                            <option value="">Toutes les catégories</option>
                        </select>
                    </div>

                    <!-- Price Range (optionnel) -->
                    <div class="mb-4">
                        <label class="form-label fw-bold">
                            <i class="bi bi-currency-euro"></i> Prix
                        </label>
                        <div class="d-flex gap-2">
                            <input type="number" class="form-control" placeholder="Min" min="0">
                            <input type="number" class="form-control" placeholder="Max" min="0">
                        </div>
                    </div>

                    <!-- Filter Buttons -->
                    <div class="d-grid gap-2">
                        <button type="submit" class="btn btn-primary">
                            <i class="bi bi-filter"></i> Appliquer
                        </button>
                        <a asp-page="./Index" class="btn btn-outline-secondary">
                            <i class="bi bi-x-circle"></i> Réinitialiser
                        </a>
                    </div>

                    @* <input asp-for="SearchString"
                           class="form-control"
                           placeholder="Rechercher..." />

                    <select asp-for="ProductCategory"
                            asp-items="Model.Category"
                            class="form-select">
                        <option value="">Toutes les catégories</option>
                    </select>

                    <button type="submit" class="btn btn-primary">
                        <i class="bi bi-filter"></i> Appliquer
                    </button> *@
                </form>
            </div>
        </div>
    </aside>

    <!-- PRODUITS -->
    <section class="col-lg-9">
        <p class="text-muted mb-3">
            <strong>@Model.Product.Count</strong> produit(s)
        </p>

        @if (!Model.Product.Any())
        {
            <div class="text-center py-5">
                <i class="bi bi-inbox fs-1 text-muted"></i>
                <h4>Aucun produit trouvé</h4>
            </div>
        }
        else
        {
            <div class="row g-4">
                @foreach (var item in Model.Product)
                {
                    <div class="col-md-6 col-xl-4">
                        <div class="card h-100 shadow-sm">

                            <!-- IMAGE -->
                            <div class="position-relative">
                                <img src="@(item.ImageUrl ?? "https://via.placeholder.com/400x300")" class="card-img-top"
                                    style="height:240px; object-fit:cover;" alt="@item.Name" />

                                @* STOCK *@
                                @if (item.StockQuantity <= 0)
                                {
                                    <span class="badge bg-danger position-absolute top-0 end-0 m-2">
                                        Rupture
                                    </span>
                                }
                                else if (item.StockQuantity < 10)
                                {
                                    <span class="badge bg-warning text-dark position-absolute top-0 end-0 m-2">
                                        @item.StockQuantity restants
                                    </span>
                                }

                                @* ARCHIVÉ *@
                                @if (item.IsArchived)
                                {
                                    <span class="badge bg-secondary position-absolute top-0 start-0 m-2">
                                        Archivé
                                    </span>
                                }

                                @* VEDETTE *@
                                @if (item.IsFeatured)
                                {
                                    <span class="badge bg-warning text-dark position-absolute bottom-0 end-0 m-2">
                                        <i class="bi bi-star-fill"></i>
                                    </span>
                                }
                            </div>

                            <!-- BODY -->
                            <div class="card-body d-flex flex-column">
                                <small class="text-muted">
                                    <i class="bi bi-tag"></i> @item.Category?.Name
                                </small>

                                <h5 class="card-title mt-2">
                                    <a asp-page="./Details" asp-route-id="@item.Id" class="text-decoration-none">
                                        @item.Name
                                    </a>
                                </h5>

                                <p class="text-muted small flex-grow-1">
                                    @(item.Description?.Length > 90
                                                                ? item.Description[..90] + "..."
                                                                : item.Description)
                                </p>

                                <div class="d-flex justify-content-between align-items-end">
                                    <span class="fw-bold text-primary">
                                        @item.Price.ToString("C")
                                    </span>

                                    <div class="btn-group btn-group-sm">
                                        <a asp-page="./Details" asp-route-id="@item.Id" class="btn btn-outline-primary">
                                            <i class="bi bi-eye"></i>
                                        </a>

                                        @if (item.StockQuantity > 0)
                                        {
                                            <button class="btn btn-primary ajouter-panier" data-product-id="@item.Id">
                                                <i class="bi bi-cart-plus"></i>
                                            </button>
                                        }
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        }
    </section>
</div>

<script src="~/js/scriptProduct.js"></script>