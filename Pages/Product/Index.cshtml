@page "{searchString?}"
@model E_commerce_c_charp.Pages_Product.IndexModel

@{
    ViewData["Title"] = "Nos Produits";
}

<!-- Page Header -->
<div class="row mb-4">
    <div class="col-12">
        <h1 class="section-title">
            <i class="bi bi-grid-3x3-gap"></i> Catalogue Produits
        </h1>
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a asp-page="/Index">Accueil</a></li>
                <li class="breadcrumb-item active">Produits</li>
            </ol>
        </nav>
    </div>
</div>

<div class="row">
    <!-- Sidebar Filters -->
    <div class="col-lg-3 mb-4">
        <div class="card shadow-sm">
            <div class="card-header bg-primary text-white">
                <h5 class="mb-0"><i class="bi bi-funnel"></i> Filtres</h5>
            </div>
            <div class="card-body">
                <form method="get">
                    <!-- Search by Name -->
                    <div class="mb-4">
                        <label class="form-label fw-bold">
                            <i class="bi bi-search"></i> Rechercher
                        </label>
                        <input type="text" 
                               class="form-control" 
                               asp-for="SearchString" 
                               placeholder="Nom du produit..."/>
                    </div>

                    <!-- Category Filter -->
                    <div class="mb-4">
                        <label class="form-label fw-bold">
                            <i class="bi bi-tags"></i> Catégorie
                        </label>
                        <select asp-for="ProductCategory" 
                                asp-items="Model.Category" 
                                class="form-select">
                            <option value="">Toutes les catégories</option>
                        </select>
                    </div>

                    <!-- Price Range (optionnel) -->
                    <div class="mb-4">
                        <label class="form-label fw-bold">
                            <i class="bi bi-currency-euro"></i> Prix
                        </label>
                        <div class="d-flex gap-2">
                            <input type="number" class="form-control" placeholder="Min" min="0">
                            <input type="number" class="form-control" placeholder="Max" min="0">
                        </div>
                    </div>

                    <!-- Filter Buttons -->
                    <div class="d-grid gap-2">
                        <button type="submit" class="btn btn-primary">
                            <i class="bi bi-filter"></i> Appliquer
                        </button>
                        <a asp-page="./Index" class="btn btn-outline-secondary">
                            <i class="bi bi-x-circle"></i> Réinitialiser
                        </a>
                    </div>
                </form>
            </div>
        </div>

        <!-- Admin Actions -->
        @if (User.IsInRole("Admin"))
        {
            <div class="card shadow-sm mt-3">
                <div class="card-body">
                    <h6 class="card-title">Administration</h6>
                    <a asp-page="Create" class="btn btn-success btn-sm w-100">
                        <i class="bi bi-plus-circle"></i> Nouveau Produit
                    </a>
                </div>
            </div>
        }
    </div>

    <!-- Products Grid -->
    <div class="col-lg-9">
        <!-- Results Header -->
        <div class="d-flex justify-content-between align-items-center mb-3">
            <p class="text-muted mb-0">
                <strong>@Model.Product.Count</strong> produit(s) trouvé(s)
            </p>
            <div class="btn-group btn-group-sm" role="group">
                <button type="button" class="btn btn-outline-secondary active">
                    <i class="bi bi-grid-3x3"></i>
                </button>
                <button type="button" class="btn btn-outline-secondary">
                    <i class="bi bi-list"></i>
                </button>
            </div>
        </div>

        @if (Model.Product.Count == 0)
        {
            <div class="empty-state">
                <i class="bi bi-inbox"></i>
                <h3>Aucun produit trouvé</h3>
                <p>Essayez de modifier vos critères de recherche</p>
            </div>
        }
        else
        {
            <!-- Products Grid -->
            <div class="row g-4">
                @foreach (var item in Model.Product)
                {
                    <div class="col-md-6 col-xl-4">
                        <div class="card product-card h-100 shadow-sm">
                            <!-- Product Image -->
                            <div class="position-relative">
                                <img src="@(item?.ImageUrl ?? "https://via.placeholder.com/300x250?text=Product")" 
                                     class="card-img-top" 
                                     alt="@item.Name">
                                
                                <!-- Stock Badge -->
                                @if (item.StockQuantity <= 0)
                                {
                                    <span class="position-absolute top-0 end-0 m-2 badge bg-danger">
                                        Rupture de stock
                                    </span>
                                }
                                else if (item.StockQuantity < 10)
                                {
                                    <span class="position-absolute top-0 end-0 m-2 badge bg-warning text-dark">
                                        Stock limité
                                    </span>
                                }
                            </div>

                            <div class="card-body d-flex flex-column">
                                <!-- Category -->
                                <p class="text-muted small mb-2">
                                    <i class="bi bi-tag"></i> @item.Category?.Name
                                </p>

                                <!-- Product Name -->
                                <h5 class="card-title">
                                    <a asp-page="./Details" asp-route-id="@item.Id" 
                                       class="text-decoration-none text-dark">
                                        @item.Name
                                    </a>
                                </h5>

                                <!-- Description -->
                                <p class="card-text text-muted small flex-grow-1">
                                    @(item.Description?.Length > 80 
                                        ? item.Description.Substring(0, 80) + "..." 
                                        : item.Description)
                                </p>

                                <!-- Rating -->
                                @* <div class="product-rating mb-2">
                                    @for (int i = 1; i <= 5; i++)
                                    {
                                        @if (i <= item.Rating)
                                        {
                                            <i class="bi bi-star-fill"></i>
                                        }
                                        else
                                        {
                                            <i class="bi bi-star"></i>
                                        }
                                    }
                                    <span class="text-muted small ms-1">(@item.Rating)</span>
                                </div> *@

                                <!-- Price and Actions -->
                                <div class="d-flex justify-content-between align-items-center mt-auto">
                                    <span class="product-price">@item.Price.ToString("C")</span>
                                    <div class="btn-group btn-group-sm">
                                        <a asp-page="./Details" asp-route-id="@item.Id" 
                                           class="btn btn-outline-primary" 
                                           title="Détails">
                                            <i class="bi bi-eye"></i>
                                        </a>
                                        @if (item.StockQuantity > 0)
                                        {
                                            <button type="button" class="btn btn-primary" title="Ajouter au panier">
                                                <i class="bi bi-cart-plus"></i>
                                            </button>
                                        }
                                    </div>
                                </div>

                                <!-- Admin Actions -->
                                @if (User.IsInRole("Admin"))
                                {
                                    <div class="mt-2 pt-2 border-top">
                                        <div class="btn-group btn-group-sm w-100">
                                            <a asp-page="./Edit" asp-route-id="@item.Id" 
                                               class="btn btn-warning">
                                                <i class="bi bi-pencil"></i> Modifier
                                            </a>
                                            <a asp-page="./Delete" asp-route-id="@item.Id" 
                                               class="btn btn-danger">
                                                <i class="bi bi-trash"></i> Supprimer
                                            </a>
                                        </div>
                                    </div>
                                }
                            </div>
                        </div>
                    </div>
                }
            </div>
        }
    </div>
</div>
