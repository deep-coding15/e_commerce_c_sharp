@page
@model E_commerce_c_charp.Pages.Cart.Pages_Cart_Index
@* E_commerce_c_charp.Pages_Cart.EditModel
 *@
 
@{
    ViewData["Title"] = "Mon Panier";
}

<div class="row mb-4">
    <div class="col-12">
        <h1 class="section-title">
            <i class="bi bi-cart3"></i> Mon Panier
        </h1>
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a asp-page="/Index">Accueil</a></li>
                <li class="breadcrumb-item active">Panier</li>
            </ol>
        </nav>
    </div>
</div>

@* Exemple avec panier vide *@
@if (false) @* Remplacer par votre condition *@
{
    <div class="empty-state">
        <i class="bi bi-cart-x"></i>
        <h3>Votre panier est vide</h3>
        <p>Découvrez nos produits et commencez vos achats</p>
        <a asp-page="/Product/Index" class="btn btn-primary mt-3">
            <i class="bi bi-shop"></i> Continuer mes achats
        </a>
    </div>
}
else
{
    <div class="row">
        <!-- Cart Items -->
        <div class="col-lg-8 mb-4">
            <div class="card shadow-sm">
                <div class="card-header bg-white">
                    <h5 class="mb-0">Articles (3)</h5>
                </div>
                <div class="card-body p-0">
                    <!-- Cart Item -->
                    <div class="cart-item p-3 border-bottom">
                        <div class="row align-items-center">
                            <div class="col-md-2">
                                <img src="https://via.placeholder.com/100" class="img-fluid rounded" alt="Product">
                            </div>
                            <div class="col-md-4">
                                <h6 class="mb-1">Nom du produit</h6>
                                <p class="text-muted small mb-0">Catégorie: Electronics</p>
                            </div>
                            <div class="col-md-2">
                                <div class="input-group input-group-sm">
                                    <button class="btn btn-outline-secondary" type="button">
                                        <i class="bi bi-dash"></i>
                                    </button>
                                    <input type="number" class="form-control text-center" value="1" min="1">
                                    <button class="btn btn-outline-secondary" type="button">
                                        <i class="bi bi-plus"></i>
                                    </button>
                                </div>
                            </div>
                            <div class="col-md-2 text-center">
                                <strong class="text-primary">29,99 €</strong>
                            </div>
                            <div class="col-md-2 text-end">
                                <button class="btn btn-sm btn-outline-danger" title="Supprimer">
                                    <i class="bi bi-trash"></i>
                                </button>
                            </div>
                        </div>
                    </div>
                    <!-- Repeat for more items -->
                </div>
            </div>

            <!-- Continue Shopping -->
            <div class="mt-3">
                <a asp-page="/Product/Index" class="btn btn-outline-primary">
                    <i class="bi bi-arrow-left"></i> Continuer mes achats
                </a>
            </div>
        </div>

        <!-- Order Summary -->
        <div class="col-lg-4">
            <div class="card shadow-sm sticky-top" style="top: 20px;">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0">Récapitulatif</h5>
                </div>
                <div class="card-body">
                    <div class="d-flex justify-content-between mb-2">
                        <span>Sous-total</span>
                        <strong>89,97 €</strong>
                    </div>
                    <div class="d-flex justify-content-between mb-2">
                        <span>Livraison</span>
                        <strong class="text-success">Gratuit</strong>
                    </div>
                    <div class="d-flex justify-content-between mb-2">
                        <span>TVA (20%)</span>
                        <strong>17,99 €</strong>
                    </div>
                    <hr>
                    <div class="d-flex justify-content-between mb-3">
                        <h5>Total</h5>
                        <h5 class="text-primary">107,96 €</h5>
                    </div>

                    <!-- Promo Code -->
                    <div class="mb-3">
                        <div class="input-group input-group-sm">
                            <input type="text" class="form-control" placeholder="Code promo">
                            <button class="btn btn-outline-secondary" type="button">
                                Appliquer
                            </button>
                        </div>
                    </div>

                    <!-- Checkout Button -->
                    <div class="d-grid">
                        <a asp-page="/Checkout/Index" class="btn btn-primary btn-lg">
                            <i class="bi bi-credit-card"></i> Commander
                        </a>
                    </div>

                    <!-- Trust Badges -->
                    <div class="text-center mt-3">
                        <small class="text-muted">
                            <i class="bi bi-lock"></i> Paiement sécurisé<br>
                            <i class="bi bi-truck"></i> Livraison rapide
                        </small>
                    </div>
                </div>
            </div>
        </div>
    </div>
}
