@page
@model E_commerce_c_charp.Pages_Cart.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Cart</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Cart.Id" />
            <div class="form-group">
                
                <label asp-for="Cart.UserId" class="control-label"></label>
                <select asp-for="Cart.UserId" class="form-control" asp-items="ViewBag.UserId"></select>
                <span asp-validation-for="Cart.UserId" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Cart.IsActive" /> @Html.DisplayNameFor(model => model.Cart.IsActive)
                </label>
            </div>
            <div class="form-group">
                
                <label asp-for="Cart.CreatedAt" class="control-label"></label>
                <input asp-for="Cart.CreatedAt" class="form-control" />
                <span asp-validation-for="Cart.CreatedAt" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
