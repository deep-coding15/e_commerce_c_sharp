@page
@model E_commerce_c_charp.Pages.Checkout.IndexModel

@{
    ViewData["Title"] = "Checkout";
}

<h2>Récapitulatif du panier</h2>

@if (Model.Order.Items != null && Model.Order.Items.Any())
{
    <table class="table">
        <thead>
            <tr>
                <th>Produit</th>
                <th>Quantité</th>
                <th>Prix unitaire</th>
                <th>Total ligne</th>
            </tr>
        </thead>
        <tbody>
        @foreach (var item in Model.Order.Items)
        {
            <tr>
                <td>@item.Product?.Name</td>
                <td>@item.Quantity</td>
                <td>@item.Product?.Price.ToString("0.00") €</td>
                <td>@item.TotalPrice.ToString("0.00") €</td>
            </tr>
        }
        </tbody>
    </table>

    <div class="text-end">
        <p><strong>Prix HT :</strong> @Model.Order.PrixHT.ToString("0.00") €</p>
        <p><strong>TVA :</strong> @Model.Order.PrixTVA.ToString("0.00") €</p>
        <p><strong>Total TTC :</strong> @Model.Order.PrixTTC.ToString("0.00") €</p>
    </div>
}
else
{
    <p>Votre panier est vide.</p>
}

<hr />

<h3>Informations client</h3>

<form method="post">
    @* seront pre-remplis par  *@
    <div class="mb-3">
        <label asp-for="Order.FullName" class="form-label"></label>
        <input asp-for="Order.FullName" class="form-control" required/>
        <span asp-validation-for="Order.FullName" class="text-danger"></span>
    </div>
    
    <div class="mb-3">
        <label asp-for="Order.Email" class="form-label"></label>
        <input asp-for="Order.Email" class="form-control" required/>
        <span asp-validation-for="Order.Email" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Order.Address" class="form-label"></label>
        <input asp-for="Order.Address" class="form-control" />
@*         <span asp-validation-for="Order.Address" class="text-danger"></span>
 *@    </div>

    <div class="mb-3">
        <label asp-for="Order.City" class="form-label"></label>
        <input asp-for="Order.City" class="form-control" />
@*         <span asp-validation-for="Order.City" class="text-danger"></span>
 *@    </div>

    <div class="mb-3">
        <label asp-for="Order.Phone" class="form-label"></label>
        <input asp-for="Order.Phone" class="form-control" />
@*         <span asp-validation-for="Order.Phone" class="text-danger"></span>
 *@    </div>

    <button type="submit" id="valider-commande" class="btn btn-primary">Valider la commande</button>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
