@using Microsoft.AspNetCore.Antiforgery
@inject IAntiforgery Antiforgery
<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"] - Administration</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <!-- Bootstrap -->
    <link rel="stylesheet"
          href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" />
    <link rel="stylesheet"
          href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" />

    <!-- CSS global du projet (inchangé) -->
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="~/css/style.css" />
    <link rel="stylesheet" href="~/css/african-culture.css" />
</head>

<body class="bg-light">

<!-- ================= HEADER ================= -->
<header class="bg-white border-bottom">
    <div class="container-fluid px-4 py-3 d-flex justify-content-between align-items-center">

        <!-- Branding -->
        <div>
            <h4 class="mb-0">Nka'aMarket</h4>
            <small class="text-muted">
                Administration de la boutique
            </small>
        </div>

        <!-- Infos admin -->
        <div class="d-flex align-items-center gap-3">
            <span class="badge bg-light text-dark border">
                <i class="bi bi-person"></i>
                @User.Identity?.Name
            </span>

            <partial name="_LoginPartial" />
        </div>
    </div>

    <!-- ================= NAVIGATION ================= -->
    <nav class="border-top">
        <div class="container-fluid px-4">
            <ul class="nav nav-tabs">

                <li class="nav-item">
                    <a class="nav-link @(ViewContext.RouteData.Values["page"]?.ToString()?.StartsWith("/Admin/Dashboard") == true ? "active" : "")"
                       asp-page="/Admin/Dashboard/Index">
                        <i class="bi bi-speedometer2"></i>
                        Tableau de bord
                    </a>
                </li>

                <li class="nav-item">
                    <a class="nav-link @(ViewContext.RouteData.Values["page"]?.ToString()?.StartsWith("/Admin/Product") == true ? "active" : "")"
                       asp-page="/Admin/Product/Index">
                        <i class="bi bi-box-seam"></i>
                        Produits
                    </a>
                </li>

                <li class="nav-item">
                    <a class="nav-link @(ViewContext.RouteData.Values["page"]?.ToString()?.StartsWith("/Admin/Order") == true ? "active" : "")"
                       asp-page="/Admin/Order/Index">
                        <i class="bi bi-receipt"></i>
                        Commandes
                    </a>
                </li>

                <li class="nav-item">
                    <a class="nav-link @(ViewContext.RouteData.Values["page"]?.ToString()?.StartsWith("/Admin/User") == true ? "active" : "")"
                       asp-page="/Admin/User/Index">
                        <i class="bi bi-people"></i>
                        Utilisateurs
                    </a>
                </li>

                <li class="nav-item">
                    <a class="nav-link @(ViewContext.RouteData.Values["page"]?.ToString()?.StartsWith("/Admin/SupplierRequest") == true ? "active" : "")"
                       asp-page="/Admin/SupplierRequest/Index">
                        <i class="bi bi-inbox"></i>
                        Supplier Requests
                    </a>
                </li>

                <li class="nav-item">
                    <a class="nav-link @(ViewContext.RouteData.Values["page"]?.ToString()?.StartsWith("/Admin/Supplier") == true ? "active" : "")"
                       asp-page="/Admin/Supplier/Index">
                        <i class="bi bi-truck"></i>
                        Suppliers
                    </a>
                </li>

                <li class="nav-item">
                    <a class="nav-link @(ViewContext.RouteData.Values["page"]?.ToString()?.StartsWith("/Admin/Analytic") == true ? "active" : "")"
                       asp-page="/Admin/Analytic/Index">
                        <i class="bi bi-graph-up"></i>
                        Analytiques
                    </a>
                </li>

            </ul>
        </div>
    </nav>
</header>

<!-- ================= MAIN ================= -->
<main class="container-fluid px-4 py-4">
    @RenderBody()
</main>

<!-- ================= FOOTER ================= -->
<footer class="bg-white border-top mt-4">
    <div class="container-fluid px-4 py-3 d-flex justify-content-between">
        <small class="text-muted">
            &copy; @DateTime.Now.Year - Nka'aMarket Admin
        </small>
        <small class="text-muted">
            Projet ASP.NET Core Razor Pages - ENSA Tétouan
        </small>
    </div>
</footer>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
@RenderSection("Scripts", required: false)

</body>
</html>
