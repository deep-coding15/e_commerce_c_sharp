@using Microsoft.AspNetCore.Antiforgery
@inject IAntiforgery Antiforgery
<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"] - Administration</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link rel="stylesheet"
          href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" />
    <link rel="stylesheet"
          href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body class="bg-light">

    <header class="border-bottom bg-white">
        <div class="container-fluid py-3 d-flex justify-content-between align-items-center">
            <div>
                <h4 class="mb-0">Administration</h4>
                <small class="text-muted">Gérez votre boutique en ligne</small>
            </div>
            <div>
                <span class="badge bg-light text-dark border me-3">
                    Administrateur :
                    @User.Identity?.Name
                </span>

                <form asp-area="" asp-page="/Account/Logout" method="post" class="d-inline">
                    <button type="submit" class="btn btn-outline-secondary btn-sm">
                        <i class="bi bi-box-arrow-right"></i> Déconnexion
                    </button>
                </form>
            </div>
        </div>

        <nav class="border-top">
            <div class="container-fluid">
                <ul class="nav nav-tabs px-2">
                    <li class="nav-item">
                        <a class="nav-link @(ViewContext.RouteData.Values["page"]?.ToString()?.StartsWith("/Admin/Dashboard") == true ? "active" : "")"
                           asp-page="/Admin/Dashboard/Index">
                            <i class="bi bi-activity"></i> Tableau de bord
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link @(ViewContext.RouteData.Values["page"]?.ToString()?.StartsWith("/Admin/Products") == true ? "active" : "")"
                           asp-page="/Admin/Product/Index">
                            <i class="bi bi-box-seam"></i> Produits
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link @(ViewContext.RouteData.Values["page"]?.ToString()?.StartsWith("/Admin/Orders") == true ? "active" : "")"
                           asp-page="/Admin/Order/Index">
                            <i class="bi bi-receipt"></i> Commandes
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link @(ViewContext.RouteData.Values["page"]?.ToString()?.StartsWith("/Admin/Users") == true ? "active" : "")"
                           asp-page="/Admin/User/Index">
                            <i class="bi bi-people"></i> Utilisateurs
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link @(ViewContext.RouteData.Values["page"]?.ToString()?.StartsWith("/Admin/Analytics") == true ? "active" : "")"
                           asp-page="/Admin/Analytics/Index">
                            <i class="bi bi-graph-up"></i> Analytiques
                        </a>
                    </li>
                </ul>
            </div>
        </nav>
    </header>

    <main class="container-fluid py-4">
        @RenderBody()
    </main>
        <footer class="border-top bg-white mt-4">
        <div class="container-fluid py-3 d-flex justify-content-between align-items-center">
            <small class="text-muted">
                &copy; @DateTime.Now.Year - E-commerce Admin
            </small>
            <small class="text-muted">
                Projet E-commerce ASP.NET Core - ENSA Tétouan
            </small>
        </div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
