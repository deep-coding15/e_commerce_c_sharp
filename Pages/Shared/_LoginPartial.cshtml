@using Microsoft.AspNetCore.Identity
@using E_commerce_c_charp.Models

@inject SignInManager<User> SignInManager
@inject UserManager<User> UserManager

@if (SignInManager.IsSignedIn(User))
{
    var user = await UserManager.GetUserAsync(User);
    <li class="nav-item dropdown">
        <a class="nav-link dropdown-toggle" href="#" id="userDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
            <i class="bi bi-person-circle fs-5"></i>
            <span class="d-none d-lg-inline ms-1">@(user?.Nom ?? User.Identity?.Name)</span>
        </a>
        <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="userDropdown">
            <li>
                <a class="dropdown-item" asp-area="Identity" asp-page="/Account/Manage/Index">
                    <i class="bi bi-person"></i> Mon profil
                </a>
            </li>
            <li>
                <a class="dropdown-item" asp-area="" asp-page="/Order/Index">
                    <i class="bi bi-box-seam"></i> Mes commandes
                </a>
            </li>
            <li>
                <a class="dropdown-item" asp-area="" asp-page="/Wishlist/Index">
                    <i class="bi bi-heart"></i> Ma liste de souhaits
                </a>
            </li>
            <li><hr class="dropdown-divider"></li>
            <li>
                <form asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Page("/Index", new { area = "" })" method="post">
                    <button type="submit" class="dropdown-item text-danger">
                        <i class="bi bi-box-arrow-right"></i> DÃ©connexion
                    </button>
                </form>
            </li>
        </ul>
    </li>
}
else
{
    <li class="nav-item">
        <a class="nav-link" asp-area="Identity" asp-page="/Account/Login">
            <i class="bi bi-box-arrow-in-right"></i> Connexion
        </a>
    </li>
    <li class="nav-item">
        <a class="nav-link btn btn-primary text-white ms-2" asp-area="Identity" asp-page="/Account/Register">
            <i class="bi bi-person-plus"></i> Inscription
        </a>
    </li>
}
