@using Microsoft.AspNetCore.Antiforgery
@inject IAntiforgery Antiforgery
<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />  
    <meta name="csrf-token" content="@Antiforgery.GetAndStoreTokens(Context).RequestToken" />
    <title>@ViewData["Title"] - E-Commerce Store</title>
    
    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <!-- Bootstrap Icons -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <!-- Custom CSS -->
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/E_commerce_c_charp.styles.css" asp-append-version="true" />
</head>
<body>
    <!-- Top Bar -->
    <div class="top-bar bg-dark text-white py-2">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-md-6">
                    <small><i class="bi bi-envelope me-2"></i>support@ecommerce.com</small>
                    <small class="ms-3"><i class="bi bi-telephone me-2"></i>+33 1 23 45 67 89</small>
                </div>
                <div class="col-md-6 text-end">
                    <small>Livraison gratuite dès 50€</small>
                </div>
            </div>
        </div>
    </div>

    <!-- Main Navigation -->
    <header>
        <nav class="navbar navbar-expand-lg navbar-light bg-white border-bottom shadow-sm">
            <div class="container">
                <!-- Logo -->
                <a class="navbar-brand fw-bold text-primary" asp-area="" asp-page="/Index">
                    <i class="bi bi-shop"></i> E-Commerce
                </a>

                <!-- Mobile Toggle -->
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarContent">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="navbarContent">
                    <!-- Main Menu -->
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-page="/Index">
                                <i class="bi bi-house-door"></i> Accueil
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-page="/Product/Index">
                                <i class="bi bi-grid"></i> Produits
                            </a>
                        </li>
                        @* TODO: Faire un catalogue v2 *@
                        @* <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-page="/Catalogue/Index">
                                <i class="bi bi-tags"></i> Catalogue
                            </a>
                        </li> *@
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-page="/Order/Index">
                                <i class="bi bi-box-seam"></i> Commandes
                            </a>
                        </li>
                    </ul>

                    <!-- Search Bar -->
                    <form class="d-flex me-3" role="search">
                        <div class="input-group">
                            <input class="form-control" type="search" placeholder="Rechercher un produit..." aria-label="Search">
                            <button class="btn btn-outline-primary" type="submit">
                                <i class="bi bi-search"></i>
                            </button>
                        </div>
                    </form>

                    <!-- Right Menu: Cart & User -->
                    <ul class="navbar-nav">
                        <!-- Shopping Cart -->
                        <li class="nav-item">
                            <a class="nav-link position-relative" asp-area="" asp-page="/Cart/Index">
                                <i class="bi bi-cart3 fs-5"></i>
                                <span class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-danger">
                                    0
                                </span>
                            </a>
                        </li>
                        
                        <!-- User Menu -->
                        <partial name="_LoginPartial" />
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <!-- Main Content avec flex: 1 0 auto -->
    @* <main class="mb-5"> *@
    <main class="flex-fill">
        <div class="container mt-4">
            @RenderBody()
        </div>
    </main>

    <!-- Footer -->
    <footer class="bg-dark text-white mt-5">
        <div class="container py-5">
            <div class="row">
                <!-- About -->
                <div class="col-md-3 mb-4">
                    <h5 class="fw-bold mb-3">
                        <i class="bi bi-shop"></i> E-Commerce
                    </h5>
                    <p class="small text-white-50">
                        Votre boutique en ligne de confiance pour des produits de qualité.
                    </p>
                    <div class="social-links">
                        <a href="#" class="text-white me-3"><i class="bi bi-facebook"></i></a>
                        <a href="#" class="text-white me-3"><i class="bi bi-twitter"></i></a>
                        <a href="#" class="text-white me-3"><i class="bi bi-instagram"></i></a>
                        <a href="#" class="text-white"><i class="bi bi-linkedin"></i></a>
                    </div>
                </div>

                <!-- Quick Links -->
                <div class="col-md-3 mb-4">
                    <h6 class="fw-bold mb-3">Liens rapides</h6>
                    <ul class="list-unstyled">
                        <li class="mb-2"><a href="#" class="text-white-50 text-decoration-none">À propos</a></li>
                        <li class="mb-2"><a href="#" class="text-white-50 text-decoration-none">Contact</a></li>
                        <li class="mb-2"><a href="#" class="text-white-50 text-decoration-none">FAQ</a></li>
                        <li class="mb-2"><a asp-area="" asp-page="/Privacy" class="text-white-50 text-decoration-none">Confidentialité</a></li>
                    </ul>
                </div>

                <!-- Customer Service -->
                <div class="col-md-3 mb-4">
                    <h6 class="fw-bold mb-3">Service client</h6>
                    <ul class="list-unstyled">
                        <li class="mb-2"><a href="#" class="text-white-50 text-decoration-none">Mon compte</a></li>
                        <li class="mb-2"><a href="#" class="text-white-50 text-decoration-none">Suivi de commande</a></li>
                        <li class="mb-2"><a href="#" class="text-white-50 text-decoration-none">Retours</a></li>
                        <li class="mb-2"><a href="#" class="text-white-50 text-decoration-none">Conditions générales</a></li>
                    </ul>
                </div>

                <!-- Newsletter -->
                <div class="col-md-3 mb-4">
                    <h6 class="fw-bold mb-3">Newsletter</h6>
                    <p class="small text-white-50">Inscrivez-vous pour recevoir nos offres</p>
                    <form class="input-group mb-3">
                        <input type="email" class="form-control" placeholder="Votre email">
                        <button class="btn btn-primary" type="submit">
                            <i class="bi bi-send"></i>
                        </button>
                    </form>
                </div>
            </div>

            <hr class="border-secondary">
            
            <div class="row">
                <div class="col-md-6 text-center text-md-start">
                    <small class="text-white-50">
                        &copy; 2025 E-Commerce. Tous droits réservés.
                    </small>
                </div>
                <div class="col-md-6 text-center text-md-end">
                    <small class="text-white-50">
                        <i class="bi bi-credit-card me-2"></i>
                        <i class="bi bi-paypal me-2"></i>
                        <i class="bi bi-wallet2 me-2"></i>
                    </small>
                </div>
            </div>
        </div>
    </footer>

    <!-- Scripts -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
