<h2>Gestion des utilisateurs</h2>

<div class="row g-3 mb-4">
    <div class="col-md">
        <div class="card shadow-sm border-0">
            <div class="card-body">
                <div class="text-muted small mb-1">Total utilisateurs</div>
                <div class="card-value">@Model.TotalUsers</div>
            </div>
        </div>
    </div>
    <div class="col-md">
        <div class="card shadow-sm border-0">
            <div class="card-body">
                <div class="text-muted small mb-1">Administrateurs</div>
                <div class="card-value">@Model.AdminCount</div>
            </div>
        </div>
    </div>
    <div class="col-md">
        <div class="card shadow-sm border-0">
            <div class="card-body">
                <div class="text-muted small mb-1">Clients</div>
                <div class="card-value">@Model.ClientCount</div>
            </div>
        </div>
    </div>
    <div class="col-md">
        <div class="card shadow-sm border-0">
            <div class="card-body">
                <div class="text-muted small mb-1">Nouveaux (30j)</div>
                <div class="card-value">@Model.NewUsers30Days</div>
            </div>
        </div>
    </div>
</div>

<table class="table">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(m => m.Users[0].Name)</th>
            <th>@Html.DisplayNameFor(m => m.Users[0].Email)</th>
            <th>@Html.DisplayNameFor(m => m.Users[0].Role)</th>
            <th>@Html.DisplayNameFor(m => m.Users[0].RegistrationDate)</th>
            <th>@Html.DisplayNameFor(m => m.Users[0].IsActive)</th>
            <th>@Html.DisplayNameFor(m => m.Users[0].OrdersCount)</th>
            <th class="text-center">Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Users)
        {
            <tr>
                <td>@item.Name</td>
                <td>@item.Email</td>
                <td>@item.Role</td>
                @* <td>
                @if (item.Role == "Admin")
                {
                    <span class="badge badge-admin">Administrateur</span>
                }
                else
                {
                    <span class="badge badge-client">Client</span>
                }
            </td> *@
                <td>@item.RegistrationDate.ToString("dd/MM/yyyy HH:mm")</td>
                <td>
                    @if (item.IsActive)
                    {
                        <span class="status status-active">Actif</span>
                    }
                    else
                    {
                        <span class="status status-inactive">Inactif</span>
                    }
                </td>
                <td>@item.OrdersCount commande(s)</td>
                <td class="text-center pe-4">
                    <a asp-page="./Edit" asp-route-id="@item.Id" class="btn btn-sm btn-link text-primary">
                        <i class="bi bi-pencil"></i>
                    </a>
                    <a asp-page="./Details" asp-route-id="@item.Id" class="btn btn-sm btn-link text-secondary">
                        <i class="bi bi-eye"></i>
                    </a>
                    <a asp-page="./Delete" asp-route-id="@item.Id" class="btn btn-sm btn-link text-danger">
                        <i class="bi bi-trash"></i>
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>


