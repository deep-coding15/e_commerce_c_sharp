@page "/"
@model LandingModel
@{
    ViewData["Title"] = "Bienvenue - Votre Boutique";
}

<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css" rel="stylesheet">
</head>
<body class="bg-light">
    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg navbar-light bg-white shadow-sm fixed-top">
        <div class="container">
            <a class="navbar-brand fw-bold fs-3" href="/">
                <i class="bi bi-shop-window text-primary me-2"></i>
                MultiCoop
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav me-auto">
                    <li class="nav-item">
                        <a class="nav-link active" href="#vedette">Produits vedette</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#categories">Catégories</a>
                    </li>
                </ul>
                <div class="d-flex gap-2">
                    <a asp-page="/Account/Login" class="btn btn-outline-primary">
                        <i class="bi bi-box-arrow-in-right"></i> Connexion
                    </a>
                    <a asp-page="/Account/Register" class="btn btn-primary">
                        <i class="bi bi-person-plus"></i> S'inscrire
                    </a>
                </div>
            </div>
        </div>
    </nav>

    <!-- Hero Section -->
    <section class="hero-section d-flex align-items-center min-vh-100" 
             style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); color: white; margin-top: 76px;">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-lg-6">
                    <h1 class="display-3 fw-bold mb-4 animate__animated animate__fadeInUp">
                        Bienvenue dans votre<br>
                        <span class="text-warning">boutique en ligne</span>
                    </h1>
                    <p class="lead mb-4 animate__animated animate__fadeInUp animate__delay-1s">
                        Découvrez nos produits de qualité, livrés rapidement chez vous.
                        Profitez d'offres exclusives dès aujourd'hui !
                    </p>
                    <div class="d-flex gap-3 flex-wrap animate__animated animate__fadeInUp animate__delay-2s">
                        <a href="#vedette" class="btn btn-warning btn-lg px-5 py-3 fs-5">
                            <i class="bi bi-shop me-2"></i>
                            Voir les produits
                        </a>
                        <a asp-page="/Account/Register" class="btn btn-outline-light btn-lg px-5 py-3 fs-5">
                            <i class="bi bi-person-plus me-2"></i>
                            Créer un compte
                        </a>
                    </div>
                </div>
                <div class="col-lg-6 text-center animate__animated animate__zoomIn animate__delay-1s">
                    <img src="https://images.unsplash.com/photo-1556909114-fbarcea21f4f?ixlib=rb-4.0.3&auto=format&fit=crop&w=800&q=80" 
                         class="img-fluid rounded-5 shadow-lg" 
                         style="max-height: 500px; object-fit: cover;"
                         alt="Boutique en ligne" />
                </div>
            </div>
        </div>
    </section>

    <!-- Produits Vedette -->
    <section id="vedette" class="py-5 bg-white">
        <div class="container">
            <div class="text-center mb-5">
                <h2 class="display-4 fw-bold mb-3">🛍️ Nos produits vedette</h2>
                <p class="lead text-muted">Sélectionnés pour vous</p>
            </div>
            <div class="row g-4">
                @if (Model.FeaturedProducts?.Any() == true)
                {
                    @foreach (var product in Model.FeaturedProducts.Take(6))
                    {
                        <div class="col-lg-4 col-md-6">
                            <div class="card h-100 shadow-lg border-0 hover-scale">
                                <img src="@(product.ImageUrl ?? "https://via.placeholder.com/400x300/f8f9fa/6c757d?text=Produit")" 
                                     class="card-img-top" 
                                     style="height: 250px; object-fit: cover;"
                                     alt="@product.Name"
                                     loading="lazy" />
                                <div class="card-body d-flex flex-column">
                                    <h5 class="card-title fw-bold">@product.Name</h5>
                                    <p class="card-text flex-grow-1 text-muted">@product.Description?.Substring(0, Math.Min(100, product.Description?.Length ?? 0))...</p>
                                    <div class="d-flex justify-content-between align-items-center mt-auto">
                                        <div>
                                            <span class="badge bg-primary">@product.Category?.Name</span>
                                            <h4 class="text-primary mb-0 mt-2">@product.Price.ToString("C")</h4>
                                        </div>
                                        <a asp-page="/Product/Detail" asp-route-id="@product.Id" 
                                           class="btn btn-primary">
                                            <i class="bi bi-cart-plus"></i>
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                }
                else
                {
                    <!-- Fallback si pas de produits -->
                    <div class="col-12 text-center py-5">
                        <i class="bi bi-star-fill text-warning" style="font-size: 4rem;"></i>
                        <h3 class="mt-3">Aucun produit en vedette pour le moment</h3>
                        <p class="text-muted">Revenez bientôt pour nos nouveautés !</p>
                    </div>
                }
            </div>
            <div class="text-center mt-5">
                <a href="/Products" class="btn btn-primary btn-lg px-5 py-3">
                    <i class="bi bi-arrow-right me-2"></i>
                    Voir tout le catalogue
                </a>
            </div>
        </div>
    </section>

    <!-- Stats -->
    <section class="py-5" style="background: linear-gradient(135deg, #f8f9fa 0%, #e9ecef 100%);">
        <div class="container">
            <div class="row text-center g-4">
                <div class="col-md-3">
                    <i class="bi bi-bag-check-fill text-primary fs-1 mb-3"></i>
                    <h2 class="fw-bold text-primary">@(Model.Stats?.TotalProducts ?? 0)+</h2>
                    <p class="lead">Produits</p>
                </div>
                <div class="col-md-3">
                    <i class="bi bi-people-fill text-success fs-1 mb-3"></i>
                    <h2 class="fw-bold text-success">@(Model.Stats?.TotalOrders ?? 0)+</h2>
                    <p class="lead">Commandes</p>
                </div>
                <div class="col-md-3">
                    <i class="bi bi-truck text-info fs-1 mb-3"></i>
                    <h2 class="fw-bold text-info">24/48h</h2>
                    <p class="lead">Livraison</p>
                </div>
                <div class="col-md-3">
                    <i class="bi bi-shield-check text-warning fs-1 mb-3"></i>
                    <h2 class="fw-bold text-warning">100%</h2>
                    <p class="lead">Sécurisé</p>
                </div>
            </div>
        </div>
    </section>

    <!-- CTA Final -->
    <section class="py-5 bg-dark text-white">
        <div class="container text-center">
            <h2 class="display-4 fw-bold mb-4">Prêt à faire vos achats ?</h2>
            <p class="lead mb-5">Rejoignez dès maintenant notre communauté</p>
            <div class="d-flex gap-3 justify-content-center flex-wrap">
                <a href="/Products" class="btn btn-warning btn-lg px-5 py-3 fs-5">
                    <i class="bi bi-shop me-2"></i>Commencer les achats
                </a>
                <a asp-page="/Account/Register" class="btn btn-outline-light btn-lg px-5 py-3 fs-5">
                    <i class="bi bi-person-plus me-2"></i>Créer un compte
                </a>
            </div>
        </div>
    </section>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.js"></script>
    <script>
        // Smooth scroll
        document.querySelectorAll('a[href^="#"]').forEach(anchor => {
            anchor.addEventListener('click', function (e) {
                e.preventDefault();
                document.querySelector(this.getAttribute('href')).scrollIntoView({
                    behavior: 'smooth'
                });
            });
        });

        // Navbar scroll effect
        window.addEventListener('scroll', () => {
            const navbar = document.querySelector('.navbar');
            if (window.scrollY > 50) {
                navbar.classList.add('shadow-lg');
            } else {
                navbar.classList.remove('shadow-lg');
            }
        });
    </script>

    <style>
        .hover-scale {
            transition: all 0.3s ease;
        }
        .hover-scale:hover {
            transform: translateY(-10px);
            box-shadow: 0 20px 40px rgba(0,0,0,0.1) !important;
        }
        .navbar-brand:hover { transform: scale(1.05); transition: 0.3s; }
    </style>
</body>
</html>

