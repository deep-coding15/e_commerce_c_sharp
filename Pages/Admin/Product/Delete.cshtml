                    <form method="post" asp-page-handler="HardDelete" class="d-inline">
                        <input type="hidden" name="id" value="@Model?.Product?.Id" @* asp-for="Product.Id" *@ />
                        <button type="submit" class="btn btn-danger btn-lg px-5 py-3 rounded-pill shadow-lg"
                            id="deleteBtn" onclick="return confirmHardDelete();">
                            @*                             <i class="bi bi-trash3-fill display-4 text-danger mb-3"></i>
 *@                            <strong>Supprimer d√©finitivement</strong>
                            <p class="text-muted mb-0">‚ö†Ô∏è IRREVERSIBLE</p>
                        </button>
                    </form>

                    <!-- ‚úÖ LIEN Retour (PAS form) -->
                    <a asp-page="./Index" class="btn btn-outline-secondary btn-lg px-5 py-3 ms-3">
                        <i class="bi bi-arrow-left me-2"></i>Retour
                    </a>


                    <!-- Boutons secondaires -->
                    @* <div class="d-flex gap-2 justify-content-center flex-wrap">
                        <a asp-page="./Edit" asp-route-id="@Model.Product.Id" class="btn btn-outline-primary px-4 py-2">
                            <i class="bi bi-pencil me-2"></i>Modifier
                        </a>
                        <a asp-page="./Details" asp-route-id="@Model.Product.Id" class="btn btn-outline-info px-4 py-2">
                            <i class="bi bi-eye me-2"></i>D√©tails
                        </a>
                        <a asp-page="./Index" class="btn btn-outline-secondary px-4 py-2">
                            <i class="bi bi-arrow-left me-2"></i>Retour liste
                        </a>
                    </div> *@
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .hover-card {
        transition: all 0.3s ease;
    }

    .hover-card:hover {
        transform: translateY(-4px);
        box-shadow: 0 12px 24px rgba(0, 0, 0, 0.15) !important;
    }

    .hover-card-danger:hover {
        transform: translateY(-4px);
        box-shadow: 0 12px 24px rgba(220, 53, 69, 0.25) !important;
    }
</style>

@section Scripts {
    <script>
        // ‚úÖ Activation boutons apr√®s checkbox
        document.getElementById('confirmDelete').addEventListener('change', function () {
            const archiveBtn = document.querySelector('[asp-page-handler="Archive"] button');
            const hardDeleteBtn = document.getElementById('hardDeleteBtn');

            if (this.checked) {
                archiveBtn.disabled = false;
                hardDeleteBtn.disabled = false;
                hardDeleteBtn.classList.add('animate__pulse');
            } else {
                archiveBtn.disabled = true;
                hardDeleteBtn.disabled = true;
                hardDeleteBtn.classList.remove('animate__pulse');
            }
        });

        // ‚úÖ Confirmation hard delete
        function confirmHardDelete(productName) {
            return confirm(`‚ö†Ô∏è SUPPRESSION D√âFINITIVE\n\n"${productName}" sera SUPPRIM√â POUR TOUJOURS.\n\nCette action est IRREVERSIBLE.\n\nConfirmez-vous ?`);
        }
    </script>
}


