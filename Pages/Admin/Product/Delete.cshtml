@page
@model E_commerce_c_charp.Pages_Admin_Product.DeleteModel

@{
    ViewData["Title"] = $"Supprimer - {Model.Product.Name}";
}

<div class="container-fluid py-4">
    <div class="d-flex justify-content-between align-items-start mb-5">
        <div>
            <h1 class="h3 mb-2">
                <i class="bi bi-trash3-fill me-2 text-danger"></i>
                Confirmer la suppression
            </h1>
            <p class="text-muted mb-0 lead">
                <strong>"@Model.Product.Name"</strong>
            </p>
        </div>
        <div class="alert alert-warning shadow-sm" role="alert">
            <i class="bi bi-exclamation-triangle-fill me-2"></i>
            <strong>‚ö†Ô∏è Attention :</strong> Cette action est <strong>irr√©versible</strong>
        </div>
    </div>

    <div class="row g-4">
        <!-- Aper√ßu du produit √† supprimer -->
        <div class="col-lg-5">
            <div class="card shadow-lg border-danger border-3 h-100">
                <div class="card-body text-center p-4">
                    <div class="position-relative mb-4">
                        <div class="bg-danger bg-opacity-10 border border-danger rounded-circle d-inline-flex align-items-center justify-content-center" 
                             style="width: 80px; height: 80px; position: absolute; top: -10px; right: -10px; z-index: 1;">
                            <i class="bi bi-x-circle-fill text-danger fs-3"></i>
                        </div>
                        <img src="@(Model.Product.ImageUrl ?? "https://via.placeholder.com/400x400?text=Produit")" 
                             class="img-fluid rounded-3 shadow mx-auto d-block"
                             style="max-height: 300px; width: 100%; object-fit: cover;"
                             alt="@Model.Product.Name"
                             loading="lazy" />
                    </div>
                    
                    <h3 class="text-danger mb-2">@Model.Product.Name</h3>
                    <h4 class="text-primary mb-3">@Model.Product.Price.ToString("C")</h4>
                    
                    <div class="mb-3">
                        <span class="badge @(Model.Product.StockQuantity > 0 ? "bg-warning" : "bg-secondary") fs-6">
                            @Model.Product.StockQuantity unit√©s en stock
                        </span>
                        <span class="badge bg-primary fs-6">@Model.Product.Category?.Name</span>
                        @if (Model.Product.IsFeatured)
                        {
                            <span class="badge bg-warning text-dark fs-6">üåü Vedette</span>
                        }
                    </div>
                </div>
            </div>
        </div>

        <!-- D√©tails + Formulaire de confirmation -->
        <div class="col-lg-7">
            <div class="card shadow-sm h-100">
                <div class="card-header bg-danger bg-opacity-10 border-0">
                    <h5 class="mb-0 text-danger">
                        <i class="bi bi-info-circle me-2"></i>
                        Cons√©quences de la suppression
                    </h5>
                </div>
                <div class="card-body">
                    <!-- Checklist des impacts -->
                    <div class="alert alert-danger mb-4" role="alert">
                        <ul class="mb-0">
                            <li><i class="bi bi-check-circle-fill text-danger me-2"></i>Produit supprim√© d√©finitivement</li>
                            <li><i class="bi bi-check-circle-fill text-danger me-2"></i>Stock = 0 (non r√©cup√©rable)</li>
                            <li><i class="bi bi-check-circle-fill text-danger me-2"></i>Image supprim√©e du serveur</li>
                            @if (Model.Product.IsFeatured)
                            {
                                <li><i class="bi bi-star-fill text-warning me-2"></i>Perte du statut "Vedette" sur accueil</li>
                            }
                        </ul>
                    </div>

                    <!-- D√©tails techniques -->
                    <div class="row g-3 mb-4">
                        <div class="col-md-6">
                            <div class="info-item bg-danger-subtle">
                                <label class="form-label fw-semibold text-danger">SKU</label>
                                <div class="h6">@Model.Product.Sku</div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="info-item bg-danger-subtle">
                                <label class="form-label fw-semibold text-danger">Marque</label>
                                <div class="h6">@Model.Product.Brand</div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="info-item bg-danger-subtle">
                                <label class="form-label fw-semibold text-danger">Prix</label>
                                <div class="h5 text-primary">@Model.Product.Price.ToString("C")</div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="info-item bg-danger-subtle">
                                <label class="form-label fw-semibold text-danger">Note</label>
                                <div class="h6">@Model.Product.Rating / 5 ‚≠ê</div>
                            </div>
                        </div>
                    </div>

                    <!-- Formulaire de confirmation DOUBLE -->
                    <form method="post" id="deleteForm">
                        <input type="hidden" asp-for="Product.Id" />
                        
                        <div class="alert alert-warning mb-4" role="alert">
                            <div class="form-check">
                                <input class="form-check-input" type="checkbox" id="confirmDelete" required />
                                <label class="form-check-label fw-semibold" for="confirmDelete">
                                    <i class="bi bi-check-square-fill me-2"></i>
                                    Je confirme la suppression d√©finitive de <strong>"@Model.Product.Name"</strong>
                                </label>
                            </div>
                        </div>

                        <div class="d-flex gap-3 justify-content-between flex-wrap">
                            <button type="submit" 
                                    class="btn btn-danger btn-lg px-4"
                                    id="confirmBtn"
                                    disabled>
                                <i class="bi bi-trash3-fill me-2"></i>
                                <strong>Supprimer d√©finitivement</strong>
                            </button>
                            <div class="d-flex gap-2">
                                <a asp-page="./Details" asp-route-id="@Model.Product.Id" 
                                   class="btn btn-outline-primary">
                                    <i class="bi bi-eye me-2"></i>Voir d√©tails
                                </a>
                                <a asp-page="./Index" class="btn btn-outline-secondary">
                                    <i class="bi bi-arrow-left me-2"></i>Retour √† la liste
                                </a>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .info-item {
        padding: 1rem;
        border-radius: 8px;
        border-left: 4px solid #dc3545;
        transition: all 0.2s ease;
    }
    .info-item:hover {
        box-shadow: 0 4px 12px rgba(220,53,69,0.15);
        transform: translateY(-1px);
    }
</style>

@section Scripts {
    <script>
        // Activation du bouton seulement apr√®s double confirmation
        document.getElementById('confirmDelete').addEventListener('change', function() {
            const btn = document.getElementById('confirmBtn');
            btn.disabled = !this.checked;
            
            // Animation de confirmation
            if (this.checked) {
                btn.classList.add('animate__animated', 'animate__pulse');
            }
        });

        // Confirmation finale JS
        document.getElementById('deleteForm').addEventListener('submit', function(e) {
            if (!confirm(`‚ö†Ô∏è SUPPRESSION D√âFINITIVE\n\n√ätes-vous CERTAIN de vouloir supprimer "${@Model.Product.Name}" ?\nCette action est irr√©versible.`)) {
                e.preventDefault();
            }
        });
    </script>
}
