                            style="width: 80px; height: 80px; position: absolute; top: -10px; right: -10px; z-index: 1;">
                            <i class="bi bi-x-circle-fill text-danger fs-3"></i>
                        </div>
                        <img src="@(Model.Product.ImageUrl ?? "https://via.placeholder.com/400x400/f8f9fa/6b7280?text=Produit")"
