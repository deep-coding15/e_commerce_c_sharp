                        <input type="hidden" name="id" value="@Model?.Product?.Id" @* asp-for="Product.Id" *@ />
                        <button type="submit" class="btn btn-warning btn-lg px-5 py-3 rounded-pill shadow-lg"
                            id="archiveBtn" onclick="return confirm('Archiver ce produit ?');">
                            @*                             <i class="bi bi-archive-fill display-4 text-warning mb-3"></i>
 *@                            <strong>Archiver (r√©cup√©rable)</strong>
                            <p class="text-muted mb-3">Masqu√© des listes, r√©cup√©rable</p>
                        </button>
                    </form>

