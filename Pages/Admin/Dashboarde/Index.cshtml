@* @page
@model DashboardModel
@{
    ViewData["Title"] = "Dashboard";

    var salesTrendJson   = System.Text.Json.JsonSerializer.Serialize(Model.SalesTrend);        // ex: List<decimal>
    var salesMonthsJson  = System.Text.Json.JsonSerializer.Serialize(Model.SalesMonths);       // ex: List<string>
    var orderStatusJson  = System.Text.Json.JsonSerializer.Serialize(Model.OrderStatusCounts); // Dictionary<string,int>
}

<div class="container my-4">

    <!-- Cartes KPI -->
    <div class="row mb-4">
        <div class="col-md-3 mb-3">
            <div class="card h-100">
                <div class="card-body">
                    <div class="d-flex justify-content-between">
                        <span class="text-muted">Commandes totales</span>
                        <span class="text-success small">+12%</span>
                    </div>
                    <h3 class="mt-2">@Model.TotalOrders</h3>
                    <small class="text-muted">@Model.PendingOrders en attente</small>
                </div>
            </div>
        </div>

        <div class="col-md-3 mb-3">
            <div class="card h-100">
                <div class="card-body">
                    <div class="d-flex justify-content-between">
                        <span class="text-muted">Chiffre d'affaires</span>
                        <span class="text-success small">+8%</span>
                    </div>
                    <h3 class="mt-2">@Model.Revenue.ToString("0.00") €</h3>
                    <small class="text-muted">Moy. @Model.AvgOrder.ToString("0.00") €</small>
                </div>
            </div>
        </div>

        <div class="col-md-3 mb-3">
            <div class="card h-100">
                <div class="card-body">
                    <div class="d-flex justify-content-between">
                        <span class="text-muted">Produits</span>
                        <span class="text-warning small">0 stock bas</span>
                    </div>
                    <h3 class="mt-2">@Model.ProductsCount</h3>
                    <small class="text-muted">0 en stock bas</small>
                </div>
            </div>
        </div>

        <div class="col-md-3 mb-3">
            <div class="card h-100">
                <div class="card-body">
                    <div class="d-flex justify-content-between">
                        <span class="text-muted">Utilisateurs</span>
                        <span class="text-success small">+15%</span>
                    </div>
                    <h3 class="mt-2">@Model.UsersCount</h3>
                    <small class="text-muted">Base clients active</small>
                </div>
            </div>
        </div>
    </div>

    <!-- Graphiques -->
    <div class="row mb-4">
        <div class="col-md-6 mb-3">
            <div class="card h-100">
                <div class="card-header bg-white">
                    <strong>Tendance des ventes</strong>
                </div>
                <div class="card-body">
                    <canvas id="salesTrendChart" height="120"></canvas>
                </div>
            </div>
        </div>

        <div class="col-md-6 mb-3">
            <div class="card h-100">
                <div class="card-header bg-white">
                    <strong>Statut des commandes</strong>
                </div>
                <div class="card-body d-flex justify-content-center">
                    <canvas id="orderStatusChart" height="160"></canvas>
                </div>
            </div>
        </div>
    </div>

    <!-- Produits populaires & Commandes récentes -->
    <div class="row">
        <div class="col-md-6 mb-3">
            <div class="card h-100">
                <div class="card-header bg-white">
                    <strong>Produits populaires</strong>
                </div>
                <div class="card-body">
                    @foreach (var p in Model.TopProducts)
                    {
                        <div class="d-flex justify-content-between align-items-center py-2 border-bottom">
                            <div class="d-flex align-items-center">
                                <span class="badge bg-secondary me-2">#@p.Rank</span>
                                <div>
                                    <div>@p.Name</div>
                                    <small class="text-muted">@p.SoldCount ventes</small>
                                </div>
                            </div>
                            <div class="text-primary fw-semibold">
                                @p.Price.ToString("0.00") €
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>

        <div class="col-md-6 mb-3">
            <div class="card h-100">
                <div class="card-header bg-white">
                    <strong>Commandes récentes</strong>
                </div>
                <div class="card-body">
                    @foreach (var o in Model.RecentOrders)
                    {
                        <div class="d-flex justify-content-between align-items-center py-2 border-bottom">
                            <div>
                                <div class="fw-semibold">@o.Number</div>
                                <small class="text-muted">@o.Date.ToString("dd/MM/yyyy")</small>
                            </div>
                            <div class="text-end">
                                <div>@o.Total.ToString("0.00") €</div>
                                <span class="badge bg-primary">@o.StatusLabel</span>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>

</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script>
        const salesTrendData  = @Html.Raw(salesTrendJson);
        const salesMonths     = @Html.Raw(salesMonthsJson);
        const orderStatusData = @Html.Raw(orderStatusJson);

        // Line chart – Tendance des ventes
        new Chart(document.getElementById('salesTrendChart'), {
            type: 'line',
            data: {
                labels: salesMonths,
                datasets: [{
                    label: 'ventes',
                    data: salesTrendData,
                    borderColor: 'rgba(54, 162, 235, 1)',
                    backgroundColor: 'rgba(54, 162, 235, 0.1)',
                    tension: 0.3,
                    fill: true,
                    pointRadius: 4
                }]
            },
            options: {
                responsive: true,
                plugins: { legend: { display: true } },
                scales: {
                    y: { beginAtZero: true }
                }
            }
        });

        // Pie chart – Statut des commandes
        const statusLabels = Object.keys(orderStatusData);
        const statusValues = Object.values(orderStatusData);

        new Chart(document.getElementById('orderStatusChart'), {
            type: 'pie',
            data: {
                labels: statusLabels,
                datasets: [{
                    data: statusValues,
                    backgroundColor: [
                        '#4e73df', // Livrée
                        '#1cc88a', // Confirmée
                        '#f6c23e', // En préparation
                        '#e74a3b'  // Expédiée, etc.
                    ]
                }]
            },
            options: {
                responsive: true,
                plugins: { legend: { position: 'top' } }
            }
        });
    </script> */
}
