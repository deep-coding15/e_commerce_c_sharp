@page
@model E_commerce_c_charp.Pages_Admin_Order.IndexModel
@{
    Layout = "_LayoutAdmin";
}
@{
    ViewData["Title"] = "Index";
}

<!-- Entête : filtre + export -->
<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h5 class="mb-2">Gestion des commandes</h5>
        <form method="get" class="d-flex align-items-center gap-2">
            <select asp-for="FilterStatus" asp-items="Model.StatusOptions" class="form-select form-select-sm"
                onchange="this.form.submit()">
                <option value="">Tous les filtres</option>
            </select>
        </form>
    </div>
    <form method="get" asp-page-handler="ExportCsv">
        <!-- Indique explicitement quel handler appeler lors de la soumission GET -->
        <input type="hidden" name="handler" value="ExportCsv" />

        <!-- On injecte la valeur actuelle du filtre -->
        <input type="hidden" name="FilterStatus" value="@Model.FilterStatus" />

        <button type="submit" class="btn btn-success">
            Exporter CSV
        </button>
    </form>
</div>

<!-- Cartes de résumé -->
<div class="row g-3 mb-4">
    <div class="col-md">
        <div class="card shadow-sm border-0">
            <div class="card-body">
                <div class="text-muted small mb-1">En attente</div>
                <div class="h4 mb-0">@Model.CountPending</div>
            </div>
        </div>
    </div>
    <div class="col-md">
        <div class="card shadow-sm border-0">
            <div class="card-body">
                <div class="text-muted small mb-1">Complétées</div>
                <div class="h4 mb-0">@Model.CountCompleted</div>
            </div>
        </div>
    </div>
    <div class="col-md">
        <div class="card shadow-sm border-0">
            <div class="card-body">
                <div class="text-muted small mb-1">Annulées</div>
                <div class="h4 mb-0">@Model.CountCancelled</div>
            </div>
        </div>
    </div>
    <div class="col-md">
        <div class="card shadow-sm border-0">
            <div class="card-body">
                <div class="text-muted small mb-1">Expédiées</div>
                <div class="h4 mb-0">@Model.CountDelivered</div>
            </div>
        </div>
    </div>
</div>

<!-- Tableau des commandes -->
<div class="card shadow-sm border-0">
    <div class="table-responsive">

        <table class="table align-middle mb-0">
            <thead class="table-light">
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Orders[0].Id)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Orders[0].CreatedAt)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Orders[0].Email)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Orders[0].ItemsCount)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Orders[0].Total)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Orders[0].Status)
                    </th>
                    @* <th>
                @Html.DisplayNameFor(model => model.Orders[0].User.UserName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Orders[0].User.Email)
            </th> *@
                    <th class="text-center">Actions</th>
                </tr>
            </thead>
            <tbody>
                @if (!Model.Orders.Any())
                {
                    <tr>
                        <td colspan="7" class="text-center text-muted py-4">
                            Aucune commande trouvée.
                        </td>
                    </tr>
                }
                else
                {
                    @foreach (var item in Model.Orders)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.Id)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.CreatedAt)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Email)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.ItemsCount) article(s)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Total) MAD
                            </td>
                            @* <td>
                @Html.DisplayFor(modelItem => item.Status)
            </td> *@
                            <td>
                                <form method="post" asp-page-handler="ChangeStatus" class="d-flex align-items-center gap-1">
                                    <input type="hidden" name="orderId" value="@item.Id" />
                                    <select name="status"
                                        class="form-select form-select-sm status-badge-@item.Status.ToString().ToLower()"
                                        onchange="this.form.submit()">
                                        @foreach (var opt in Model.StatusOptions)
                                        {
                                            <option value="@opt.Value" selected="@(opt.Value == item.Status.ToString())">
                                                @opt.Text
                                            </option>
                                        }
                                    </select>
                                </form>
                            </td>
                            <td class="text-center pe-4">
                                @* <a class="btn btn-sm btn-outline-primary voir-commande"
                                    data-order-id="@item.Id">
                                    <i class="bi bi-eye me-1"></i>Voir
                                </a> *@
                                <a class="btn btn-sm btn-outline-primary voir-commande" data-order-id="@item.Id">
                                    <i class="bi bi-eye me-1"></i>Voir
                                </a>
                            </td>
                        </tr>
                    }
                }
            </tbody>
        </table>

        <div class="modal fade" id="orderDetailsModal" tabindex="-1" aria-hidden="true">
            <div class="modal-dialog modal-lg modal-dialog-centered">
                <div class="modal-content">

                    <div class="modal-header">
                        <h5 class="modal-title">
                            Détails de la commande #<span id="od-number"></span>
                        </h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                    </div>

                    <div class="modal-body">

                        <!-- Bloc résumé commande -->
                        <div class="card mb-3">
                            <div class="card-body row">
                                <div class="col-md-6 mb-2">
                                    <div class="text-muted small">Date de commande</div>
                                    <div id="od-date"></div>
                                </div>
                                <div class="col-md-6 mb-2 text-md-end">
                                    <div class="text-muted small">Statut</div>
                                    <span id="od-status-badge" class="badge rounded-pill bg-warning text-dark">
                                        En attente
                                    </span>
                                </div>

                                <div class="col-md-6 mb-2">
                                    <div class="text-muted small">Mode de livraison</div>
                                    <div id="od-shipping"></div>
                                </div>
                                <div class="col-md-6 mb-2 text-md-end">
                                    <div class="text-muted small">Total HT</div>
                                    <div id="od-prix-ht" class="fw-semibold text-primary"></div>
                                    <div class="text-muted small">Total TTC</div>
                                    <div id="od-total" class="fw-semibold text-primary"></div>
                                </div>
                            </div>
                        </div>

                        <!-- Adresse de livraison -->
                        <div class="mb-3">
                            <div class="text-muted small mb-1">Adresse de livraison</div>
                            <div id="od-address" class="form-control-plaintext border rounded px-3 py-2"></div>
                        </div>

                        <!-- Articles commandés -->
                        <div class="mb-3">
                            <div class="text-muted small mb-2">Articles commandés</div>
                            <div id="od-items-list">
                                <!-- Les items seront insérés ici en JS -->
                            </div>
                        </div>

                        <!-- Mettre à jour le statut -->
                        @* <div class="mt-3">
                            <div class="text-muted small mb-2">Mettre à jour le statut</div>
                            <div class="btn-group flex-wrap" role="group">
                                <button type="button" class="btn btn-sm btn-primary status-btn" data-status="Pending">En
                                    attente</button>
                                <button type="button" class="btn btn-sm btn-outline-secondary status-btn"
                                    data-status="Confirmed">Confirmée</button>
                                <button type="button" class="btn btn-sm btn-outline-secondary status-btn"
                                    data-status="Processing">En préparation</button>
                                <button type="button" class="btn btn-sm btn-outline-secondary status-btn"
                                    data-status="Shipped">Expédiée</button>
                                <button type="button" class="btn btn-sm btn-outline-secondary status-btn"
                                    data-status="Delivered">Livrée</button>
                            </div>
                        </div> *@

                    </div>

                </div>
            </div>
        </div>

@section Scripts {
            <partial name="_ValidationScriptsPartial" />
            <script>
                document.addEventListener('DOMContentLoaded', function () {
                    const modal = document.getElementById('orderDetailsModal');
                    document.querySelectorAll('.voir-commande').forEach(btn => {
                        btn.addEventListener('click', async e => {
                            e.preventDefault();

                            const orderId = btn.dataset.orderId;
                            const originalHtml = btn.innerHTML;

                            // Spinner
                            btn.disabled = true;
                            btn.innerHTML = '<span class="spinner-border spinner-border-sm me-1"></span>Chargement...';

                            try {
                                const response = await fetch(`?handler=OrderDetailsJson&id=${orderId}`);
                                if (!response.ok) throw new Error('Erreur serveur');

                                const data = await response.json();
                                fillModal(data);

                                new bootstrap.Modal(modal).show();

                            } catch (error) {
                                alert('Erreur: ' + error.message);
                                console.error(error);
                            } finally {
                                btn.disabled = false;
                                btn.innerHTML = originalHtml;
                            }
                        });
                    });
                });

                function fillModal(data) {
                    document.getElementById('od-number').textContent = data.id;
                    document.getElementById('od-date').textContent =
                        new Date(data.dateCommande).toLocaleDateString('fr-FR');
                    document.getElementById('od-status-badge').textContent = data.statusCommande;
                    document.getElementById('od-shipping').textContent = data.modeLivraison;
                    document.getElementById('od-total').textContent =
                        `${parseFloat(data.prixTotalCommande).toFixed(2)} €`;
                    document.getElementById('od-address').textContent = data.adresseCommande;
                    document.getElementById('od-prix-ht').textContent = 
                        `${parseFloat(data.prixHT).toFixed(2)} €`;
                    // Items
                    const itemsHtml = (data.orderItemRowViewModels || []).map(item => `
                            <div class="d-flex align-items-center py-2 border-bottom">
                                <img src="${item.imageUrl}" style="width:50px;height:50px;object-fit:cover;border-radius:8px;margin-right:12px;">
                                <div style="flex:1">
                                    <div class="fw-semibold">${item.nomProduit}</div>
                                    <small class="text-muted">Qte: ${item.quantite} × ${parseFloat(item.prixUnit).toFixed(2)}€</small>
                                </div>
                                <div class="fw-bold text-primary">${parseFloat(item.prixTotal).toFixed(2)}€</div>
                            </div>
                        `).join('');

                    document.getElementById('od-items-list').innerHTML = itemsHtml || '<div class="text-muted">Aucun article</div>';
                }
            </script>
}